# Example: Loading the saved model and scaler for predictions

import pickle
import numpy as np

# Load the model and scaler
with open('model.pkl', 'rb') as model_file:
    loaded_model = pickle.load(model_file)

with open('scaler.pkl', 'rb') as scaler_file:
    loaded_scaler = pickle.load(scaler_file)

# New data point (replace with real input)
new_data = np.array([[1, 1, 1, 1, 1, 1, 1]])

# Apply the same scaling to the new data
new_data_scaled = loaded_scaler.transform(new_data)

# Make a prediction
predicted_groundwater_level = loaded_model.predict(new_data_scaled)

print(f"Predicted Groundwater Level: {predicted_groundwater_level}")
